@page "{id}"
@model Lab1.Pages.EditModel
@{
    ViewData["Title"] = "Редактирование задачи";
}

<div align="center">
    <h2 class="display-4 text-center mb-5">
        Редактирование задачи
    </h2>
    <form class="col-4 card p-3" align="left" method="post">
        <input type="hidden" asp-for="Id" /> <!-- Передаем идентификатор задачи -->
        <div class="form-group mb-3">
            <label>Тема</label>
            <input class="form-control" required asp-for="Topic" placeholder="Введите тему задачи">
        </div>
        <div class="form-group mb-3">
            <label>Выполнено</label>
            <input class="form-check-input" type="checkbox" asp-for="IsCompleted">
        </div>
        <div class="form-group mb-3">
            <label>Приоритет</label>
            <input class="form-control" type="number" required asp-for="Priority" placeholder="Введите приоритет">
        </div>
        <button type="submit" class="btn btn-primary">
            Сохранить
        </button>
    </form>
</div>
