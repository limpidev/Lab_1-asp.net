@page
@model Lab1.Pages.IndexModel
@{
    ViewData["Title"] = "Список задач";
}

<div align="center">
    <h2 class="display-4 text-center mb-5">
        Список задач
    </h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Тема</th>
                <th>Выполнено</th>
                <th>Приоритет</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToDoItems)
            {
                        <tr>
                            <td>@item.Topic</td>
                            <td>@(item.IsCompleted ? "Да" : "Нет")</td>
                            <td>@item.Priority</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Изменить"><i class="bi bi-pencil"></i></a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Удалить"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a href="/Create" class="btn btn-success">Добавить задачу</a>
</div>
